{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "MailServer": {
    "SmtpHost": "<smtp host>",
    "SmtpPort": 587,
    "SmtpUsername": "<smtp user name>",
    "SmtpPassword": "<smtp password>",
    "SmtpEnableSSL": false
  },
  "App": {
    "MailProfile": "mailProfile_Default.json"
  },
  "Operator": {
    "address": "<mail address>",
    "name": "<name>"
  }
}